generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

enum SessionStatus {
  scheduled
  active
  closed
  published
}

model Session {
  id          String         @id @default(uuid())
  title       String
  sourceId    String
  startsAt    DateTime
  endsAt      DateTime
  status      SessionStatus  @default(scheduled)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  stream      RssPoemStream? @relation(fields: [streamId], references: [id])
  streamId    String?
  words       Word[]
  invites     SessionInvite[]
  poem        PublishedPoem?
  source      SourceText     @relation(fields: [sourceId], references: [id])

  @@map("sessions")
}

model Word {
  id        String   @id @default(uuid())
  session   Session  @relation(fields: [sessionId], references: [id])
  sessionId String
  index     Int
  text      String
  hidden    Boolean  @default(false)
  actorId   String?
  hiddenAt  DateTime?

  @@map("words")
}

enum InviteStatus {
  pending
  accepted
  declined
}

model SessionInvite {
  id        String        @id @default(uuid())
  session   Session       @relation(fields: [sessionId], references: [id])
  sessionId String
  email     String
  token     String        @unique
  status    InviteStatus  @default(pending)
  createdAt DateTime      @default(now())
  respondedAt DateTime?

  @@map("session_invites")
}

model SourceText {
  id        String    @id @default(uuid())
  title     String
  body      String
  createdAt DateTime  @default(now())
  sessions  Session[]

  @@map("source_texts")
}

model PublishedPoem {
  id          String   @id @default(uuid())
  session     Session  @relation(fields: [sessionId], references: [id])
  sessionId   String   @unique
  title       String
  body        String
  createdAt   DateTime @default(now())
  publishedAt DateTime?

  @@map("published_poems")
}

model RssPoemStream {
  id               String                   @id @default(uuid())
  title            String
  slug             String                   @unique
  rssUrl           String
  maxParticipants  Int
  minParticipants  Int
  durationMinutes  Int
  timeOfDay        String
  autoPublish      Boolean                  @default(false)
  lastItemGuid     String?
  lastItemPublishedAt DateTime?
  createdAt        DateTime                 @default(now())
  updatedAt        DateTime                 @updatedAt
  sessions         Session[]
  collaborators    RssStreamCollaborator[]

  @@map("rss_poem_streams")
}

model RssStreamCollaborator {
  id         String        @id @default(uuid())
  stream     RssPoemStream @relation(fields: [streamId], references: [id])
  streamId   String
  email      String
  createdAt  DateTime      @default(now())
  lastInvitedAt DateTime?

  @@unique([streamId, email])
  @@map("rss_stream_collaborators")
}
